@model IEnumerable<withusafe2.Models.Location>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-head"> Risk Precautions </h3>
<p class="box-desc">WithU provides nurses with simple and quick risk assess and precautions, to support you get prepared for each visit.</p>
<h2>Please Select Your Patient Location </h2>
@*<h3>Please Select a Suburb</h3>*@
<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Suburb)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.OffenceCount)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.OffenceRate)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Suburb)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.OffenceCount)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Population).ToString().Substring(0, 4).TrimEnd('.')
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode).ToString().Substring(0, 4)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.OffenceRate)
                    </td>*@
                <td>
                    @*<button id="btn" class="btn btn-success" style="width:200px">Select</button>*@
                    <p class="btn btn-default">
                        @Html.ActionLink("Select", "../Home/Gender", new { id = item.Id })
                    </p>
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>

</table>

<div style="align-content:center;text-align:center;">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous </a>
            </li>
            <li class="page-item"><a class="page-link" href="/locations/index"> 1 </a></li>
            <li class="page-item"><a class="page-link" href="/Home/Gender"> 2 </a></li>
            <li class="page-item"><a class="page-link" href="/Home/Age"> 3 </a></li>
            <li class="page-item"><a class="page-link" href="/Home/quiz"> 4 </a></li>
            <li class="page-item"><a class="page-link" href="/Home/quizz"> 5 </a></li>
            <li class="page-item">
                <a class="page-link" href="/Home/Gender">Next</a>
            </li>
        </ul>
    </nav>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>

        $(document).ready(function () {
            $('.table').DataTable();
        });


    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />